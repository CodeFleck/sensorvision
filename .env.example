# =============================================================================
# Industrial Cloud Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it's in .gitignore)
#
# Usage:
#   1. Copy: cp .env.example .env
#   2. Edit .env with your actual credentials
#   3. Source before running: source .env (Linux/Mac) or use your IDE
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
DB_URL=jdbc:postgresql://localhost:5432/indcloud
DB_USERNAME=indcloud
DB_PASSWORD=your_secure_password_here

# -----------------------------------------------------------------------------
# JWT Authentication (Required)
# -----------------------------------------------------------------------------
# Generate a secure random secret (minimum 32 characters)
# You can use: openssl rand -hex 32
JWT_SECRET=your_long_secure_random_string_minimum_32_chars_here
JWT_EXPIRATION_MS=86400000
JWT_ISSUER=http://localhost:8080

# -----------------------------------------------------------------------------
# MQTT Broker Configuration (Required)
# -----------------------------------------------------------------------------
MQTT_BROKER_URL=tcp://localhost:1883
MQTT_USERNAME=indcloud
MQTT_PASSWORD=your_mqtt_password_here

# MQTT Device Authentication
# Set to false only for development with trusted networks
MQTT_DEVICE_AUTH_REQUIRED=true

# -----------------------------------------------------------------------------
# Email Notifications (Optional)
# -----------------------------------------------------------------------------
EMAIL_ENABLED=false
EMAIL_FROM=noreply@indcloud.io
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# -----------------------------------------------------------------------------
# SMS Notifications (Optional - Twilio)
# -----------------------------------------------------------------------------
SMS_ENABLED=false
SMS_FROM_NUMBER=+1234567890
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# -----------------------------------------------------------------------------
# Webhook Notifications (Optional)
# -----------------------------------------------------------------------------
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT_MS=5000

# -----------------------------------------------------------------------------
# Slack Notifications (Optional)
# -----------------------------------------------------------------------------
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# Microsoft Teams Notifications (Optional)
# -----------------------------------------------------------------------------
TEAMS_ENABLED=false
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# OAuth2 Social Login (Optional)
# -----------------------------------------------------------------------------
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Application Settings (Optional)
# -----------------------------------------------------------------------------
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=INFO

# Simulator (for development/testing)
SIMULATOR_ENABLED=true
SIMULATOR_DEVICE_COUNT=10
SIMULATOR_INTERVAL_SECONDS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_CAPACITY=100
RATE_LIMIT_DATA_INGESTION_CAPACITY=1000

# -----------------------------------------------------------------------------
# Development/Testing Settings
# -----------------------------------------------------------------------------
# Set to true to disable security validations (NOT for production)
# DEV_MODE=false
